<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data></data>

    <LinearLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_guide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/text_guide_how_to_download"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_21"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/img_guide_close"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"
                android:layout_alignBottom="@id/tv_guide_title"
                android:layout_marginLeft="@dimen/dp_82"
                android:layout_toRightOf="@id/tv_guide_title"
                android:src="@mipmap/ic_guide_close"></ImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_guide_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_29"
            android:layout_marginTop="@dimen/dp_29"
            android:text="@string/text_guide_method1"
            android:textColor="@color/text_guide_method_color"
            android:textSize="@dimen/dp_19"
            android:textStyle="bold"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_27">

                <ImageView
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_36"
                    android:background="@drawable/ic_guide_tips_backgroud"></ImageView>

                <TextView
                    android:id="@+id/tv_guide_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/text_guide_serial_number_one"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24"></TextView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_guide_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="@string/text_guide_operator_one"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17"
                android:textStyle="italic"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_guide_sub_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_13"
            android:alpha="0.5"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"></TextView>

        <ImageView
            android:id="@+id/img_guide"
            android:layout_width="@dimen/dp_346"
            android:layout_height="@dimen/dp_460"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_guide_1"></ImageView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:backgroundTint="@color/color_bg_guide"
            ></View>
    </LinearLayout>
</layout>