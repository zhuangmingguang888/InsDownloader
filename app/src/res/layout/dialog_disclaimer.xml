<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_dialog_background"
    >

    <TextView
        android:id="@+id/dialog_text_disclaimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="@string/text_disclaimer"
        android:textColor="@color/text_disclaimer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        ></TextView>

    <TextView
        android:id="@+id/dialog_text_disclaimer_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:paddingLeft="20dp"
        android:text="@string/text_disclaimer_content"
        android:textColor="@color/text_disclaimer_content"
        android:layout_marginTop="31.5dp"
        ></TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/button_guide_margin_bottom"
        android:layout_marginBottom="@dimen/button_guide_margin_bottom"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_guide_height"
            android:layout_marginLeft="@dimen/button_guide_margin_left_right"
            android:layout_marginRight="@dimen/button_guide_margin_left_right"
            android:layout_below="@id/start_banner"
            android:background="@drawable/ic_guide_button_background"
            ></TextView>

        <TextView
            android:id="@+id/tv_disclaimer_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/text_guide_method_size"
            android:text="@string/text_disclaimer_button"
            >
        </TextView>
    </FrameLayout>

</LinearLayout>