<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fl_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_bg_guide">

    <TextView
        android:id="@+id/tv_guide_title"
        android:layout_width="@dimen/text_guide_title_width"
        android:layout_height="@dimen/text_guide_title_height"
        android:textColor="@color/white"
        android:text="@string/how_to_download"
        android:textSize="21sp"
        android:layout_marginTop="@dimen/text_guide_margin_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>