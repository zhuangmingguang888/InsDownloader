<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_dialog_background"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_19"
            android:src="@mipmap/ic_rate"></ImageView>

        <TextView
            android:id="@+id/text_rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:text="@string/text_appraise_title"
            android:textColor="@color/text_disclaimer"
            android:textSize="@dimen/sp_24"></TextView>

        <TextView
            android:id="@+id/text_rate_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_appraise_sub_title"
            android:textColor="@color/text_disclaimer_content"
            android:padding="@dimen/dp_10"
            android:gravity="center"
            android:textSize="@dimen/sp_18"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_44"
            android:paddingRight="@dimen/dp_44"
            android:layout_marginBottom="@dimen/dp_37"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_appraise_unselect"></ImageView>


            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_appraise_unselect"></ImageView>

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_appraise_unselect"></ImageView>

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_appraise_unselect"></ImageView>

            <ImageView
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_appraise_unselect"></ImageView>

        </LinearLayout>

    </LinearLayout>
</layout>